    // Prevents error:
    // TS2569: Type 'Set ' is not an array type or a string type. Use compiler option '--downlevelIteration' to allow iterating of iterators.
    "target": "es6",

    // Prevents error:
    // TS2792: Cannot find module 'typeorm'. Did you mean to set the 'moduleResolution' option to 'node', or to add aliases to the 'paths' option?
    "moduleResolution": "node"
  }
}
